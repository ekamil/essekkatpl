include Makefile

SSH_HOST := lao
URL      := http://essekkat.pl

WWW_PATH := ~/public_html

deploy: _site
	sed -i 's|site.url = .*|site.url = "$(URL)"|' _config.py
	$(RSYNC) --exclude 'debian/' _site/ $(SSH_HOST):$(WWW_PATH)/
	ssh $(SSH_HOST) 'chmod -R 755 $(WWW_PATH)/'

clean-remote:
	ssh $(SSH_HOST) 'rm -r $(WWW_PATH)/*'
